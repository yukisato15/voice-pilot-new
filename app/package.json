{
  "name": "zoom-director-assist",
  "version": "0.1.0",
  "private": true,
  "description": "Zoom収録ディレクター補助ツール",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.mts",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:electron": "wait-on tcp:5173 dist/main/main.js && env -u ELECTRON_RUN_AS_NODE cross-env NODE_ENV=development electron .",
    "build": "vite build --config vite.config.mts && tsc -p tsconfig.main.json",
    "start": "env -u ELECTRON_RUN_AS_NODE cross-env NODE_ENV=production electron .",
    "lint": "eslint \"renderer/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test:exports": "tsx --test main/utils/__tests__/exportFormats.test.ts"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "chokidar": "^3.5.3",
    "date-fns": "^3.6.0",
    "electron-store": "^8.1.0",
    "fast-glob": "^3.3.2",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "slugify": "^1.6.6",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "wait-on": "^7.1.0",
    "tsx": "^4.19.0"
  }
}
